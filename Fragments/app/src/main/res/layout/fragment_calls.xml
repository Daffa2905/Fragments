<?xml version="1.0" encoding="utf-8"?>
<!--membuat layout dengan tipe linear berorientasi vertikal untuk menu profile
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallsFragment"
    android:background="@color/design_default_color_on_primary"
    android:backgroundTint="@color/black"
    android:padding="16dp"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <!--Layout bagian atas untuk label Profile-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/label_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Profile"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </RelativeLayout>

    <!--di bawah label Profile terdapat avatar profile pengguna yang berada di tengah berdasarkan sisi horizontal-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/profil1"
        android:layout_marginTop="50dp"/>
    <!--membuat text di bawah avatar profile untuk Nama Pengguna yang berada di tengah layar-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hu Tao"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="28sp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal" />
    <!--membuat text username di bawah Nama Pengguna -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\@daffaalfin"
        android:textColor="#707070"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hu Tao is amazing"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal" />

    <!--membuat button dengan icon sebanyak 4 menggunakan layout relative-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="68dp">

        <RelativeLayout
            android:id="@+id/chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_second_solid"
            android:padding="15dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/chat" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_second_solid"
            android:padding="15dp"
            android:layout_toRightOf="@+id/chat"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="17dp"
                android:src="@drawable/history" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_second_solid"
            android:padding="15dp"
            android:layout_toRightOf="@+id/history"
            android:layout_marginLeft="15dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/heart"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/love"
            android:background="@drawable/bg_second_solid"
            android:padding="15dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/more" />
        </RelativeLayout>

    </RelativeLayout>

    <!--Detail profile pengguna-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHARACTER NAME"
        android:textColor="#707070"
        android:textSize="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hu Tao"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginBottom="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ELEMENT"
        android:textColor="#707070"
        android:textSize="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Pyro"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FROM"
        android:textColor="#707070"
        android:textSize="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Liyue"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GAME"
        android:textColor="#707070"
        android:textSize="12dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GENSHIN IMPACT"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginBottom="15dp"/>

</LinearLayout>