<?xml version="1.0" encoding="utf-8"?>
<!--Layout utama untuk membuat menu Home dengan orientasi vertical-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ChatsFragment"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TODO: Update blank fragment layout -->
    <!--Relative layout agar terlihat rapi-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome To Tevyat"
            android:textSize="20dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travelers!"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_below="@+id/text1"/>

        <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_below="@+id/text2"
            android:layout_marginTop="1dp"
            android:src="@drawable/mainbanner" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image1"
            android:layout_marginTop="20dp"
            android:background="@color/teal_700"
            android:text="Mulai Game"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Here is new Story"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_below="@+id/text3"
            android:layout_marginTop="10dp"
            android:src="@drawable/event" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harapan semua orang terkumpul di bawah naungan cahaya rembulan, menyaksikan kilatan guntur dan kobaran api, sambil menikmati kepulan asap perapian dan cahaya lentera.
Rembulan telah bersinar ribuan tahun, dan bebatuan telah berdiri kokoh sekian lamanya. Sekelibat cahaya melintas dalam sekejap, sementara dunia terus berputar."
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:layout_below="@id/image2"/>

    </RelativeLayout>

</LinearLayout>